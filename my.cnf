[mysqld]
# Giảm kích thước bộ nhớ đệm InnoDB
innodb_buffer_pool_size = 64M
innodb_log_buffer_size = 1M

# Giảm kích thước bộ nhớ đệm truy vấn
query_cache_size = 0

# Giảm số kết nối tối đa
max_connections = 50

# Giảm kích thước bộ nhớ đệm tạm thời
tmp_table_size = 16M
max_heap_table_size = 16M

# Tắt bộ nhớ đệm phân loại (nếu không cần thiết)
thread_cache_size = 0

# Tắt InnoDB Log File nếu không cần thiết
innodb_log_file_size = 16M

# Giảm kích thước bộ nhớ đệm cho Join
join_buffer_size = 1M

# Giảm kích thước bộ nhớ đệm sort
sort_buffer_size = 1M

# Giảm kích thước bộ nhớ đệm đọc
read_buffer_size = 512K
read_rnd_buffer_size = 512K